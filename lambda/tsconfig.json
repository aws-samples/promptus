{
  "compilerOptions": {
    "baseUrl": ".",
    "allowUnreachableCode": false,
    "esModuleInterop": true,
    "target": "ES2021",
    "module": "commonjs",
    "lib": [
      "es2021",
      "DOM"
    ],
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": true,
    "stripInternal": true,
    "paths": {
      "/opt/nodejs/*": [
        "../promptusCommon/*",
        "common/*"
      ]
    },
    "outDir": "./dist/package",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "../promptusCommon/",
    "functions/",
  ],
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}